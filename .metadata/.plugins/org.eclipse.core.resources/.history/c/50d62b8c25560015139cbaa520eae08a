package tr.gov.tubitak.demo;

public class Car {
	public String name;
	public String year;
	public Tyre tyre;
	public HeadLight headlight;

	public Car(String name, String year, Tyre tyre, HeadLight headlight) {

		this.name = name;
		this.year = year;
		this.tyre = new Tyre(tyre.brand,tyre.depth);
		this.headlight = new HeadLight(headlight.type);
	}

	public class Tyre {
		public String brand;
		public int depth;

		public Tyre(String brand, int depth) {
			this.brand = brand;
			this.depth = depth;

		}

		public Tyre() {

		}

	}

	public class HeadLight {
		public String type;

		public HeadLight(String type) {
			this.type = type;
		}

		public HeadLight() {

		}
	}

}
