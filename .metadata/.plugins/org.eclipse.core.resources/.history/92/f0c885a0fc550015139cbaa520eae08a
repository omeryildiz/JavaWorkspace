package tr.gov.tubitak.sekizeylul;

import java.util.Collection;
import java.util.HashMap;
import java.util.Map;
import java.util.Set;

public class UsingMap {

	public static void main(String[] args) {
		//map üzerinde key tarafýný set olarak tutmuþtur. Çünkü key benzersiz olmalýdýr.
		//map'in values kýsmý collection döner.
		Map<String, String> myMap = new HashMap<>();
		//hasmap kýsmýna linkedhashmap dersek liste sýralý gelir.
		//new LinkedHashMap<>();
		myMap.put("342", "ömer");
		myMap.put("343", "sami");
		myMap.put("344", "mehmet");
		myMap.put("345", "hediye");
		
		Set<String> keySet = myMap.keySet();
		Collection<String> values = myMap.values();
		
		for(String key : keySet)
		{
			System.out.println(key);
		}
		CollectionFrameworkSamples.cizgiCek();
		for(String value : values)
		{
			System.out.println(value);
		}
		CollectionFrameworkSamples.cizgiCek();
		
		//1. dolaþma yöntemi
		for (String key : keySet) {
			System.out.println(key+""+myMap.get(key));
		}
		
		//mapin 2. dolaþma yöntemi
		for (Map.Entry<String, String> entry : myMap.entrySet()) {
			System.out.println(entry.getKey()+" = "+entry.getValue());
		}
		
		
		
	}

}
