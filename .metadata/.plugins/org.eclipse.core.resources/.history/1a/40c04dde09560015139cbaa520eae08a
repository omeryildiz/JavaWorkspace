package tr.gov.tubitak.demo;

import java.text.DateFormat;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;

public class DateTimeProcess {
	public static void main(String[] args) {
		Date date = new Date();
		System.out.println(date);
		System.out.println(date.getTime());
		//Aþaðýda sonuç 1 veya -1 þeklinde dönecektir.
		System.out.println(date.compareTo(new Date(123421)));
		
		DateFormat df = new SimpleDateFormat("dd-MM-yyyy");
		
		System.out.println(df.format(date));
		
		//date elde etmek için 

		//calendar kullanýmý
		Calendar cal = Calendar.getInstance();
		System.out.println(cal.get(Calendar.DAY_OF_WEEK));
		cal.set(Calendar.HOUR_OF_DAY, 10);
		System.out.println(cal.getTime());
		
		Calendar newCal = Calendar.getInstance();
		newCal.setTime(new Date(df.parse("27-10-1988")));
		
		
	}

}
